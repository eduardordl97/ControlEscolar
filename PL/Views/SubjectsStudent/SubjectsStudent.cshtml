
@{
    ViewBag.Title = "SubjectsStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="row card-header py-3 animate__animated animate__fadeIn">
        <div class="text-start m-0 col-6">
            <h4>Inscribir Materias</h4>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
               
                <div class="col-md-8 mt-4  offset-1">
                    <div class="form-group">
                        <label for="input-subject" class="form-label txt-b mb-3">Selecciona una Materia:</label>
                        <input class="form-control form-control" list="dataListSubjects" data-clear="" id="input-subject" tabindex="1" placeholder="Escribe para buscar" data-placeholder="Materias" autocomplete="off" onchange="fSelectSubject()">
                        <datalist id="dataListSubjects"></datalist>
                        <input id="input-id-student" type="hidden" value="@Session["idUserSession"]" />
                    </div>

                    <div class="card mt-4" style="width: auto;">
                        <div class="card-body">
                            <h5 class="card-title">Total<span class="ms-3" id="span-total"></span></h5>
           
                        </div>
                    </div>
                </div>

                @*<div class="col-md-8 offset-1">
                    <div class="d-none " id="content-cards" style="width:100%; height:450px; overflow-y: scroll;">
                    </div>
                </div>*@
            </div>
            <div class="col-md-6" id="container-data">
                <div class="container  text-center mt-2 mb-2" id="container-img">
                    <img class="img-fluid" src="~/Assets/img/undraw_education_f8ru.svg" width="700">
                </div>
                <div class="d-none" id="content-cards" style="width:100%; height:400px; overflow-y: scroll;">
                </div>
            </div>
            <div class="col-md-6 d-none" style='height: 710px;overflow-y: scroll;' id="container-data-save">

            </div>
            <div class="offset-6">
                <div class="text-center col-md-6" id="content-savedata">
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/SubjectsStudent/subjects-students.js"></script>

