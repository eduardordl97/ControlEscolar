
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Alumnos</h2>

<div class="card shadow mb-4">
    <div class="card-header py-3 animate__animated animate__fadeIn">
        <div class="text-end m-0" id="content-newdata">
            <button class='btn btn-sm btn-success' onclick='fShowModal();'> <i class='fas fa-plus-circle mr-2'></i> Agregar </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive animate__animated animate__backInDown">
            <table class="table" id="table-dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="txt-b">Nombre</th>
                        <th class="txt-b">Apellido Paterno</th>
                        <th class="txt-b">Apellido Materno</th>
                        <th class="txt-b">Fecha Alta</th>
                        <th class="txt-b">Estado</th>
                        <th class="txt-b">Opciones</th>
                    </tr>
                </thead>
                <tbody id="body-data">
                </tbody>
            </table>
        </div>
    </div>
</div>



<script type="text/javascript" src="~/Scripts/Students/students.js"></script>




